    "db:verify": "tsx src/db/verify.ts",
    "mongodb:init": "tsx src/db/initMongoDB.ts",
    "data:examples": "tsx src/examples/dataServiceUsage.example.ts",
    "test:mongodb": "tsx scripts/test-mongodb-connection.ts",
    "test:redis": "tsx scripts/test-redis-connection.ts",
    "test:vector-search": "tsx scripts/test-vector-search.ts",
    "test:connections": "npm run test:mongodb && npm run test:redis",
    "create:indexes": "tsx scripts/create-indexes.ts",
    "migrate:new-workflow": "tsx src/scripts/migrateToNewWorkflow.ts",
    "migrate:clean": "tsx src/scripts/cleanMigration.ts",
    "seed:prompts": "tsx src/scripts/seedPrompts.ts"
  },
  "dependencies": {
