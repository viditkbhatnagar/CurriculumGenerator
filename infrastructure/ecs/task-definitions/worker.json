{
  "family": "curriculum-worker",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "${EXECUTION_ROLE_ARN}",
  "taskRoleArn": "${TASK_ROLE_ARN}",
  "containerDefinitions": [
    {
      "name": "worker",
      "image": "${ECR_REGISTRY}/curriculum-worker:${IMAGE_TAG}",
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "${SECRETS_ARN}:DATABASE_URL::"
        },
        {
          "name": "REDIS_URL",
          "valueFrom": "${SECRETS_ARN}:REDIS_URL::"
        },
        {
          "name": "OPENAI_API_KEY",
          "valueFrom": "${SECRETS_ARN}:OPENAI_API_KEY::"
        },
        {
          "name": "PINECONE_API_KEY",
          "valueFrom": "${SECRETS_ARN}:PINECONE_API_KEY::"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/${ENVIRONMENT}/curriculum-worker",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
